  <nav id="mainNav" class="prepend-5 clear">
   <ul id="siteNav">
     <li class=<%= "this" if current_page?(:controller => 'pages', :action => 'home') %> >
       <%= link_to "Home", root_path, 
       {:class => ("this" if current_page?(:controller => 'pages', :action => 'home'))} %>
     </li>
     <li class=<%= "this" if current_page?(:controller => 'rsvps', :action => 'new') %> >
