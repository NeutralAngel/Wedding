     <li class=<%= "this" if current_page?(:controller => 'pages', :action => 'reception') %> >
       <%= link_to "Reception", reception_path, {:class => ("this" if current_page?(:controller => 'pages', :action => 'reception'))} %>
     </li>
     <li class=<%= "this" if current_page?(:controller => 'pages', :action => 'registry') %> >
       <%= link_to "Registry", registry_path, {:class => ("this" if current_page?(:controller => 'pages', :action => 'registry'))} %>
     </li>
     <li class=<%= "this" if current_page?(:controller => 'pages', :action => 'honeymoon') %> >
       <%= link_to "Honeymoon", honeymoon_path, {:class => 
         (if current_page?(:controller => 'pages', :action => 'honeymoon')
            "this last"
          else
            "last"
          end)} %>
     </li>
   </ul>
 </nav>
</header>



